{
  "name": "snapmatch-platform",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:worktree": "node ./scripts/dev-worktree.mjs",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "dev:web": "pnpm -C apps/web dev",
    "dev:admin": "pnpm -C apps/admin dev",
    "dev:backend": "pnpm -C apps/backend dev",
    "build:web": "pnpm -C apps/web build",
    "build:admin": "pnpm -C apps/admin build",
    "build:backend": "pnpm -C apps/backend build",
    "lint:web": "pnpm -C apps/web lint",
    "lint:admin": "pnpm -C apps/admin lint",
    "lint:backend": "pnpm -C apps/backend lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "pnpm -C apps/web lint --fix"
    ],
    "apps/admin/**/*.{js,jsx,ts,tsx}": [
      "pnpm -C apps/admin lint --fix"
    ],
    "apps/backend/**/*.{js,ts}": [
      "pnpm -C apps/backend lint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3"
    }
  }
}
